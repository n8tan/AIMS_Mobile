<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:ems="10"
        android:id="@+id/itemStatus"
        android:layout_alignBaseline="@+id/lblItemStatus"
        android:layout_alignBottom="@+id/lblItemStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Name: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblItemName"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:ems="10"
        android:id="@+id/itemCategory"
        android:layout_alignBaseline="@+id/lblItemCategory"
        android:layout_alignBottom="@+id/lblItemCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:ems="10"
        android:id="@+id/itemLocation"
        android:layout_alignBaseline="@+id/lblItemLocation"
        android:layout_alignBottom="@+id/lblItemLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lblItemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Brand: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/lblItemName"
        android:layout_alignEnd="@+id/lblItemName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:ems="10"
        android:id="@+id/itemName"
        android:layout_alignBaseline="@+id/lblItemName"
        android:layout_alignBottom="@+id/lblItemName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Category: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/lblItemCategory"
        android:layout_below="@+id/lblItemStatus"
        android:layout_alignLeft="@+id/lblItemStatus"
        android:layout_alignStart="@+id/lblItemStatus" />

    <TextView
        android:id="@+id/lblItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblItemName"
        android:layout_alignStart="@+id/lblItemName"
        android:layout_below="@+id/lblItemName"
        android:layout_marginTop="45dp"
        android:text="Item Model: "
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="#00a65a"
        android:text="BACK"
        android:onClick="onClickBtnBack"
        android:layout_below="@+id/lblItemLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

</RelativeLayout>