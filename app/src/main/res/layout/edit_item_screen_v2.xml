<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/itemStatus"
        android:layout_alignBaseline="@+id/lblItemStatus"
        android:layout_alignBottom="@+id/lblItemStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Name: "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblItemName"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/itemCategory"
        android:spinnerMode="dropdown"
        android:textSize="20px"
        android:layout_alignBottom="@+id/lblItemCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/itemStatus"
        android:layout_alignStart="@+id/itemStatus"
        android:layout_alignTop="@+id/lblItemCategory" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/itemLocation"
        android:layout_alignBaseline="@+id/lblItemLocation"
        android:layout_alignBottom="@+id/lblItemLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lblItemLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Brand: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/lblItemStatus"
        android:layout_alignEnd="@+id/lblItemStatus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/itemName"
        android:layout_alignBaseline="@+id/lblItemName"
        android:layout_alignBottom="@+id/lblItemName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Category: "
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblItemCategory"
        android:layout_above="@+id/itemLocation"
        android:layout_alignLeft="@+id/lblItemStatus"
        android:layout_alignStart="@+id/lblItemStatus"
        android:layout_marginBottom="27dp" />

    <TextView
        android:id="@+id/lblItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblItemName"
        android:layout_alignStart="@+id/lblItemName"
        android:layout_below="@+id/lblItemName"
        android:layout_marginTop="45dp"
        android:text="Item Model: "
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnViewItemCancel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnViewItemSave"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnViewItemSave"
        android:layout_marginBottom="41dp"
        android:background="#dd4b39"
        android:text="CANCEL"
        android:onClick="onClickBtnCancel"/>

    <Button
        android:id="@+id/btnViewItemSave"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnViewItemCancel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="#00a65a"
        android:text="SAVE"
        android:onClick="onClickBtnSave"/>

</RelativeLayout>